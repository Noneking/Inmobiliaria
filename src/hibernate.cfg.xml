<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/inmobiliaria?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="Hibernate_mapping_files/Vendedores.hbm.xml"/>
    <mapping resource="Hibernate_mapping_files/Vendido.hbm.xml"/>
    <mapping resource="Hibernate_mapping_files/Clientes.hbm.xml"/>
    <mapping resource="Hibernate_mapping_files/Agencia.hbm.xml"/>
    <mapping resource="Hibernate_mapping_files/Piso.hbm.xml"/>
    <mapping resource="Hibernate_mapping_files/Local.hbm.xml"/>
    <mapping resource="Hibernate_mapping_files/Alquilado.hbm.xml"/>
    <mapping resource="Hibernate_mapping_files/Inmueble.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
